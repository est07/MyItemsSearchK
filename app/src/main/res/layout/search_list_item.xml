<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_5dp"
    android:layout_marginLeft="@dimen/size_5dp"
    android:layout_marginRight="@dimen/size_5dp"
    android:layout_marginBottom="@dimen/size_2dp"
    app:cardCornerRadius="@dimen/size_4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imvItemSearch"
            android:layout_width="@dimen/size_100dp"
            android:layout_height="@dimen/size_100dp"
            android:layout_margin="@dimen/size_8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txvItemSearchTitle"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_8dp"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="@dimen/size_14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imvItemSearch"
            app:layout_constraintTop_toTopOf="@+id/imvItemSearch"
            tools:text="title Text" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txvItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8dp"
            android:textSize="@dimen/size_16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/txvItemSearchTitle"
            app:layout_constraintEnd_toEndOf="@+id/txvItemSearchTitle"
            app:layout_constraintTop_toBottomOf="@+id/txvItemSearchTitle"
            app:layout_constraintHorizontal_bias="1.0"
            tools:text="Item price" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
